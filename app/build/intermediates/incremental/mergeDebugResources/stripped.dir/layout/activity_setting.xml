<?xml version="1.0" encoding="utf-8"?>

                                                   

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_32"
        tools:context=".activity.MainActivity" android:tag="layout/activity_setting_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_32"
            android:fontFamily="@font/atari_pixel"
            android:text="@string/setting"
            android:textSize="@dimen/textSize28" />


        <TextView
            android:id="@+id/tv_title_yourname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_setting"
            android:layout_marginTop="@dimen/margin_84"
            android:fontFamily="@font/atari_pixel"
            android:text="@string/your_name"
            android:textSize="@dimen/textSize20"
            tools:ignore="SpUsage" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_title_yourname"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_edit_name"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_fingure"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/atari_pixel"
                android:gravity="center"
                android:minHeight="40sp"
                android:text="@string/s_a_m_v_u"
                android:textSize="@dimen/textSize28"
                tools:ignore="RelativeOverlap" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_setting_exit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_64"
            android:src="@drawable/icon_fingure" />


    </RelativeLayout>
         