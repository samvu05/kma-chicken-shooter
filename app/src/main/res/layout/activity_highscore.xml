<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_play2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/bg_titile"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_100"
            android:fontFamily="@font/atari_pixel"
            android:text="@string/high_score"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/textSize32" />

        <LinearLayout
            android:id="@+id/view_high_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_high_score_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atari_pixel"
                android:text="@string/s_a_m_v_u"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/textSize32" />

            <TextView
                android:id="@+id/tv_high_socre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32"
                android:fontFamily="@font/atari_pixel"
                android:text="55"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/textSize96" />
        </LinearLayout>

        <TextView
            android:id="@+id/empty_high_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/atari_pixel"
            android:gravity="center"
            android:text="@string/highscore_empty"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/textSize32" />

        <ImageView
            android:id="@+id/btn_high_score_exit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_100"
            android:src="@drawable/icc_btn_close" />

    </RelativeLayout>
</layout>